{% trans_default_domain 'messages' %}

<div class="well bordered-left bordered-themeprimary animated bounceInDown">
    {% set info = "widget_box.note.cache"|trans %}
    {% set info2 = "widget_box.note.add"|trans %}
    
    <p>
        <i class="fas fa-info-circle" data-html="false" data-toggle="tooltip" title="{{ info2 }}" data-placement="top"></i>
        <a href="{{ path("block_widget_box_index",{eventName: name_area}) }}" class="btn-link bold animated fadeInLeft" data-toggle="tooltip" title="{{ info }}" data-placement="top">
            <i class="fas fa-plus-circle"></i>&nbsp;{{ "widget_box.button.add"|trans }}
            {% set news = gridWidgetBoxService.countNews() %}
            {% if news > 0 %}
                {{ "widget_box.news"|trans({"%count%": news}) }}
            {% endif %}
        </a>
    </p>
    
    {% set news = gridWidgetBoxService.countNews() %}
    {% if news > 0 %}
        <p><i class="fa fa-star yellow margin-right-5"></i><strong>{{ "widget_box.note"|trans }}</strong> 
            {{ "widget_box.news.alert"|trans({"%news%": news}) }}
        </p>
    {% endif %}
</div>
                
<div id="area_main_widgets" class="gridster" style="min-height: 200px">
    <ul class="main-dashboard" style="list-style-type: none;margin:0;" url-update-widget="{{ path('block_widget_box_update') }}">
        {{ tecno_block_render_event(name_area, { 'target': name_area }) }}
    </ul>
</div>
    
{{ widgets_init_grid() }}